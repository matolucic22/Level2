@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Project.Service.ViewModels.VehicleModelVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "VehicleModel", FormMethod.Get))
    {
        <b>Pretraži po:</b>
        @Html.RadioButton("searchBy", "MakeName")<text>MakeName</text>
        @Html.RadioButton("searchBy", "Name", true) <text>Name</text>
        @Html.RadioButton("searchBy", "Abrv") <text>Abrv</text> <br />
        @Html.TextBox("search") <input type="submit" value="search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("MakeName", "Index", new { search = Request.QueryString["search"], sortBy = ViewBag.SortNameModel, searchBy = Request.QueryString["searchBy"] })      
        <th>
            @Html.ActionLink("Name", "Index", new { search = Request.QueryString["search"], sortBy = ViewBag.SortNameModelParameter, searchBy = Request.QueryString["searchBy"] })
        </th>
        <th>
            @Html.ActionLink("Abrv", "Index", new { search = Request.QueryString["search"], sortBy = ViewBag.SortAbrvModelParameter, searchBy = Request.QueryString["searchBy"] })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.DisplayFor(modelItem => item.VehicleMake.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Abrv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
          <!-- @Html.ActionLink("Details", "Details", new { id=item.Id }) |--> 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })<!--Request je iz URLa-->
 